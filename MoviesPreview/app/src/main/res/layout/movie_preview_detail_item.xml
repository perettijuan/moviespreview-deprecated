<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">


    <TextView
        android:id="@+id/txt_movie_preview_detail_title"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textAppearance="@style/Title.Expanded"
        android:textColor="@color/colorAccent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_movie_preview_body"
        style="@android:style/TextAppearance.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="Body"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        card_view:layout_constraintTop_toBottomOf="@+id/txt_movie_preview_detail_title"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="16dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        card_view:layout_constraintLeft_toLeftOf="@+id/txt_movie_preview_detail_title" />
</android.support.constraint.ConstraintLayout>